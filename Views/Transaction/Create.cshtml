@model geneInsure.Models.Transaction    
    
@{    
    ViewData["Title"] = "Create";    
}    
<h2>Create</h2>    
<h4>Transactions</h4>    
<hr />    
<div class="row">    
    <div class="col-md-4">    
        <form asp-action="Create">    
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            <div class="form-group">    
                <label asp-for="certificateNumber" class="control-label"></label>    
                <input asp-for="certificateNumber" class="form-control" />    
                <span asp-validation-for="certificateNumber" class="text-danger"></span>    
            </div>    
            <div class="form-group">    
                <label asp-for="branchCode" class="control-label"></label>    
                <select asp-for="branchCode" class="form-control">    
                    <option value="">-- Select Branch --</option>    
                    <option value="Male">Male</option>    
                    <option value="Female">Female</option>    
                </select>    
                <span asp-validation-for="branchCode" class="text-danger"></span>    
            </div>    
            <div class="form-group">    
                <label asp-for="customerName" class="control-label"></label>    
                <input asp-for="customerName" class="form-control" />    
                <span asp-validation-for="customerName" class="text-danger"></span>    
            </div>    
            <div class="form-group">    
                <label asp-for="customerEmail" class="control-label"></label>    
                <input asp-for="customerEmail" class="form-control" />    
                <span asp-validation-for="customerEmail" class="text-danger"></span>    
            </div> 
            <div class="form-group">    
                <label asp-for="customerContactNumber" class="control-label"></label>    
                <input asp-for="customerContactNumber" class="form-control" />    
                <span asp-validation-for="customerContactNumber" class="text-danger"></span>    
            </div>   
            <div class="form-group">    
                <input type="submit" value="Create" class="btn btn-default" />    
            </div>    
        </form>    
    </div>    
</div>    
<div>    
    <a asp-action="Index">Back to List</a>    
</div>    
@section Scripts {    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}   